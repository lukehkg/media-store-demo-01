# AWS Configuration
aws_region = "eu-west-1"
aws_account_id = "123456789012"  # Replace with your AWS Account ID
project_name = "demo-media01"  # Prefix for all resources (for easy management and tag searching)
environment = "dev"

# VPC Configuration (Cost-optimized: smaller subnets, single NAT Gateway)
vpc_cidr = "10.0.0.0/16"
availability_zones = ["eu-west-1a", "eu-west-1b"]
public_subnet_cidrs = ["10.0.1.0/28", "10.0.2.0/28"]  # Smaller subnets (/28 = 16 IPs each)
private_subnet_cidrs = ["10.0.10.0/28", "10.0.20.0/28"]  # Smaller subnets (/28 = 16 IPs each)
enable_nat_gateway = true
single_nat_gateway = true  # Cost optimization: use single NAT Gateway

# ECS Cluster Configuration
ecs_cluster_name = "media-store-cluster"

# Docker Images (Leave empty to use ECR repositories created by Terraform)
# Or specify custom image URLs
backend_image = ""
frontend_admin_image = ""
frontend_client_image = ""

# Task Resource Configuration
backend_cpu = 512
backend_memory = 1024
frontend_cpu = 256
frontend_memory = 512

# Service Desired Counts (Cost-optimized for demo/POC)
backend_desired_count = 1
frontend_admin_desired_count = 1
frontend_client_desired_count = 1

# Port Configuration
backend_port = 8000
frontend_port = 3000

# CloudWatch Logs (Cost-optimized: shorter retention)
log_retention_days = 3

# Auto Scaling Configuration (Cost-optimized for demo/POC)
enable_auto_scaling = true
min_capacity = 1
max_capacity = 3  # Lower max capacity for cost savings
target_cpu_utilization = 70
target_memory_utilization = 80

# SSL/TLS Configuration (optional)
# domain_name = "example.com"
# certificate_arn = "arn:aws:acm:eu-west-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Security
allowed_cidr_blocks = ["0.0.0.0/0"]

